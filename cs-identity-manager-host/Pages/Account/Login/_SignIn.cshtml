@model SignInModel


<form asp-page="/Account/Login" class="sign-in-form">
    <h2 class="title">Sign In</h2>
    <input type="hidden" asp-for="ReturnUrl" />
    
    <div class="field">
        <div class="control has-icons-left">
            <input class="input" type="text" asp-for="UserName" placeholder="Username">
            <span class="icon is-small is-left">
                <i class="fa-solid fa-clipboard-user"></i>
            </span>
        </div>
    </div>

    <div class="field">
        <div class="control has-icons-left">
            <input class="input" type="password" asp-for="Password" placeholder="Password">
            <span class="icon is-small is-left">
                <i class="fa-solid fa-lock"></i>
            </span>
        </div>
    </div>
    
    <div class="field">
        <input asp-for="RememberLogin" type="checkbox" class="switch is-rounded">
        <label asp-for="RememberLogin">Remember my login</label>
    </div>

    <button class="button is-primary">
        <span class="icon">
            <i class="fa-solid fa-right-to-bracket"></i>
        </span>
        <span>LOGIN</span>
    </button>

    <p class="social-text">Or Sign in with social platform</p>
    <div class="social-media">
        <a href="#" class="social-icon">
            <i class="fa-brands fa-facebook-f"></i>
        </a>
        <a href="#" class="social-icon">
            <i class="fa-brands fa-x-twitter"></i>
        </a>
        <a href="#" class="social-icon">
            <i class="fa-brands fa-google"></i>
        </a>
        <a href="#" class="social-icon">
            <i class="fa-brands fa-apple"></i>
        </a>
    </div>
</form>