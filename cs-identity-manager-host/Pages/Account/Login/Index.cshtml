@page
@model LoginPageModel

@{
    Layout = "Shared/_AnonymousLayout";
}

@{
    ViewData["Title"] = "Sign in & sign up Form";
}

<div class="login-container @(Model.IsSignInSelected ? "" : "sign-up-mode")">
    <input type="hidden" name="is-sign-in-selected" asp-for="IsSignInSelected"/>
    <div class="forms-container">
        <div class="signin-signup">
            <partial name="_SignIn" for="SignInInfo"/>

            <partial name="_SignUp" for="SignUpInfo"/>
        </div>
    </div>

    <div class="panels-container">
        <div class="flex-panel left-panel">
            <div class="content">
                <h3>New here ?</h3>
                <p>
                    Please sign up to be a member of amrita.
                </p>
                <button class="button is-transparent is-rounded is-outlined is-white" id="sign-up-btn">
                    Sign up
                </button>
            </div>
            <img src="../images/beer.svg" class="image" alt=""/>
        </div>
        <div class="flex-panel right-panel">
            <div class="content">
                <h3>Have an account already?</h3>
                <p>
                    Amritans!!! Assemble...
                </p>
                <button class="button is-transparent is-rounded is-outlined is-white" id="sign-in-btn">
                    Sign in
                </button>
            </div>
            <img src="../images/join.svg" class="image" alt=""/>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="/login.js"></script>
}